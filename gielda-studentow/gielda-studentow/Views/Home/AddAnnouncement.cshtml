
<div class="container">

    <h1>Dodawanie ogłoszenia</h1>
    <form name="form" ng-submit="vm.submit()" role="form">
        <label for="type" class="control-label">Wybierz rodzaj ogłoszenia:</label>
        <select id="type" class="form-control" ng-model="Type">
            <option value="">Wybierz rodzaj...</option>
            <option value="buy">Kupno rzeczy</option>
            <option value="sell">Sprzedaż rzeczy</option>
            <option value="groupChange">Zamiana grupy</option>
            <option value="giveLesson">Udzielanie korepetycji</option>
            <option value="takeLesson">Pobieranie korepetycji</option>

        </select>
        <div class="form-group" id="ogloszenie">
            <label for="title">Tytuł:</label>
            <textarea class="form-control" rows="1" id="title" style="min-width: 80%" maxlength="150" ng-model="Title"></textarea>

            <label for="Content">Opis:</label>
            <textarea class="form-control" rows="5" style="min-width: 80%" id="Content" name="Content" maxlength="5000" ng-model="Content"></textarea>

            <label for="category" class="control-label" ng-show="((Type == 'buy' || Type == 'sell') ? true : false)">Kategoria ogłoszenia:</label>
            <select id="category" class="form-control" ng-model="Category" ng-show="((Type == 'buy' || Type == 'sell') ? true : false)">
                <option>Książki</option>
                <option>Projekty</option>
                <option>Laboratoria</option>

            </select>

            <label for="fromGroup" class="control-label" ng-show="((Type == 'groupChange') ? true : false)">Zamiana z grupy:</label>
            <select id="fromGroup" class="form-control" ng-model="FromGroup" ng-change="vm.getGroups()" ng-show="((Type == 'groupChange') ? true : false)">
                <option ng-repeat="group in Groups" >{{group.CourseOfStudy.Name}} , {{group.Name}}</option>
            </select>

            <label for="toGroup" class="control-label" ng-show="((Type == 'groupChange') ? true : false)">Zamiana na grupę:</label>
            <select id="toGroup" class="form-control" ng-model="ToGroup" ng-show="((Type == 'groupChange') ? true : false)">
                <option ng-repeat="group in Groups2">{{group.CourseOfStudy.Name}} , {{group.Name}}</option>
            </select>

           
            <label for="price" ng-show="((Type != 'groupChange') ? true : false)">Cena:</label>
            <input class="form-control" rows="1" id="price" type="number" maxlength="10" ng-model="Price" ng-show="((Type != 'groupChange') ? true : false)"><br />

            <label for="subject" ng-show="((Type == 'giveLesson' || Type == 'takeLesson') ? true : false)">Przedmiot:</label>
            <textarea class="form-control" ng-show="((Type == 'giveLesson' || Type == 'takeLesson') ? true : false)" rows="1" style="min-width: 80%" id="subject" name="subject" maxlength="100" ng-model="Subject"></textarea>
            
            <label for="Location" ng-show="((Type == 'giveLesson' || Type == 'takeLesson') ? true : false)">Lokalizacja:</label>
            <textarea class="form-control" ng-show="((Type == 'giveLesson' || Type == 'takeLesson') ? true : false)" rows="1" style="min-width: 80%" id="Location" name="Location" maxlength="255" ng-model="Location"></textarea>
            <br />
            <button type="submit" class="btn btn-primary btn-md">Dodaj</button>
        </div>
        </form>
</div>