<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center well">
            <span>
                <button type="button" ng-class="{'btn btn-success' : type==0, 'btn btn-primary' : type==1}" ng-click="vm.changeType(0)">Ogłoszenia</button>
            </span>
            <span>
                <button type="button" ng-class="{'btn btn-primary' : type==0, 'btn btn-success' : type==1}" ng-click="vm.changeType(1)">Wiadomości</button>
            </span>
        </div>
    </div>
    <div ng-show="type == 0">
        <div class="row" ng-repeat="announcement in announcements">
            <div class="panel panel-primary col-md-6 col-md-offset-3">
                <div class="panel-heading text-center row">
                    <h4>
                        <strong>{{announcement.Title}}</strong>
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6 well-sm text-center">
                            <div>
                                <a href="/#!/userprofile/{{announcement.Sender.Id}}" class="img-thumbnail">
                                    <img src="{{announcement.Sender.AvatarUrl}}" alt="Brak zdjęcia">
                                </a>
                            </div>
                            <div>
                                <strong>{{announcement.Sender.UserName}}</strong>
                            </div>
                        </div>
                        <div class="col-md-6 well-sm">
                            <div>Data wystawienia: {{announcement.IssueDate | date: 'dd-MM-yyyy HH:mm'}}</div>
                            <div>Wygasa: {{announcement.ExpirationDate | date: 'dd-MM-yyyy'}}</div>
                        </div>
                    </div>
                    <br/>
                    <div class="well">
                        <div>
                            {{announcement.Content}}
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <div class="text-center">
                                    <div>
                                        <button ng-click="vm.evalAnnouncementType(announcement.Id)" type="button" data-toggle="modal" data-target="#sellItemAnnouncementModal" class="btn btn-success">
                                            Więcej
                                        </button>
                                        <div id="sellItemAnnouncementModal" class="modal fade" role="dialog">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Szczegóły ogłoszenia</h4>
                                                    </div>
                                                    <div class="modal-body text-center row">
                                                        <div class="col-md-6 col-md-offset-3" ng-if="vm.sellItemAnnouncement != undefined">
                                                            <div class="row">
                                                                <div class="col-md-6">Tytuł</div>
                                                                <div class="col-md-6">{{vm.sellItemAnnouncement.Title}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Kategoria</div>
                                                                <div class="col-md-6">{{vm.sellItemAnnouncement.Category}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Cena</div>
                                                                <div class="col-md-6">{{vm.sellItemAnnouncement.Price}}</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 col-md-offset-3" ng-if="vm.buyItemAnnouncement != undefined">
                                                            <div class="row">
                                                                <div class="col-md-6">Tytuł</div>
                                                                <div class="col-md-6">{{vm.buyItemAnnouncement.Title}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Kategoria</div>
                                                                <div class="col-md-6">{{vm.buyItemAnnouncement.Category}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Cena</div>
                                                                <div class="col-md-6">{{vm.buyItemAnnouncement.Price}}</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 col-md-offset-3" ng-if="vm.takePrivateLessonsAnnouncement != undefined">
                                                            <div class="row">
                                                                <div class="col-md-6">Tytuł</div>
                                                                <div class="col-md-6">{{vm.takePrivateLessonsAnnouncement.Title}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Przedmiot</div>
                                                                <div class="col-md-6">{{vm.takePrivateLessonsAnnouncement.Subject}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Lokalizacja</div>
                                                                <div class="col-md-6">{{vm.takePrivateLessonsAnnouncement.Location}}</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 col-md-offset-3" ng-if="vm.givePrivateLessonsAnnouncement != undefined">
                                                            <div class="row">
                                                                <div class="col-md-6">Tytuł</div>
                                                                <div class="col-md-6">{{vm.givePrivateLessonsAnnouncement.Title}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Przedmiot</div>
                                                                <div class="col-md-6">{{vm.givePrivateLessonsAnnouncement.Subject}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Lokalizacja</div>
                                                                <div class="col-md-6">{{vm.givePrivateLessonsAnnouncement.Location}}</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 col-md-offset-3" ng-if="vm.changeGroupAnnouncement != undefined">
                                                            <div class="row">
                                                                <div class="col-md-6">Tytuł</div>
                                                                <div class="col-md-6">{{vm.changeGroupAnnouncement.Title}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Z grupy</div>
                                                                <div class="col-md-6">{{vm.changeGroupAnnouncement.FromGroup}}</div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">Do grupy</div>
                                                                <div class="col-md-6">{{vm.changeGroupAnnouncement.DestinationGroup}}</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="myCarousel{{announcement.Id}}" class="carousel slide center-block" data-ride="carousel" style="width: 80%;">
                        <div ng-if="announcement.Images.length > 0">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li ng-repeat="img in announcement.Images" data-target="#myCarousel{{announcement.Id}}" data-slide-to="{{$index}}" ng-class="{'active' : $index === 0}"></li>
                            </ol>
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div ng-repeat="img in announcement.Images" class="item" ng-class="{'active' : $index===0}">
                                    <img src="{{img.Url}}" alt="Brak zdjęcia" style="max-width: 100%; max-height: 400px; margin: auto">
                                </div>
                            </div>
                            <!-- Left and right controls -->
                            <a class="left carousel-control" data-target="#myCarousel{{announcement.Id}}" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" data-target="#myCarousel{{announcement.Id}}" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div ng-show="type == 1">
        <div ng-repeat="message in vm.messages" class="row">
            <div class="panel panel-success col-md-6 col-md-offset-3">
                <div class="panel-heading text-center row">
                    <h4>
                        <strong>{{message.Subject}}</strong>
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6 well-sm text-center">
                            <div>
                                <a href="/#!/userprofile/{{message.Sender.Id}}" class="img-thumbnail">
                                    <img src="{{message.Sender.AvatarUrl}}" alt="Brak zdjęcia">
                                </a>
                            </div>
                            <div>
                                <strong>{{message.Sender.UserName}}</strong>
                            </div>
                        </div>
                        <div class="col-md-6 well-sm">
                            <div>Data wystawienia: {{message.IssueDate | date: 'dd-MM-yyyy HH:mm'}}</div>
                        </div>
                    </div>
                    <br/>
                    <div class="well">{{message.Content}}</div>

                </div>
            </div>
        </div>
    </div>
</div>