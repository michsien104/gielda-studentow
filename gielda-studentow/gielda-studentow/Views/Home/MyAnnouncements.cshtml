<div class="container-fluid row ">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel">
            <table class="table table-striped table-hover table-responsive ">
                <thead class="table-bordered">
                    <tr>
                        <th>
                            <strong>L.p.</strong>
                        </th>
                        <th>
                            <strong>Zdjęcie</strong>
                        </th>
                        <th>
                            <strong>Tytuł</strong>
                        </th>
                        <th>
                            <strong>Opcje</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="an in vm.announcements">
                        <td style="vertical-align: middle">{{$index + 1}}.</td>
                        <td style="vertical-align: middle">
                            <div>
                                <img width="50" height="50" src="{{an.Images[0].Url}}" class="img-rounded" alt="Brak zdjęcia">
                            </div>
                        </td>
                        <td style="vertical-align: middle">{{an.Title}}</td>
                        <td style="vertical-align: middle">
                            <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove" ng-click="vm.changeStatus(an.Id)"></span> Usuń {{an.Id}}</button>
                           <!-- <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-search"></span> Więcej</button> --> 
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

