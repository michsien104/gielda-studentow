<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3>Dodaj profil wydziału</h3>
            <form role="button" ng-submit="vm.addFaculty()">
                <div class="form-group">
                    <label for="university">Uczelnia</label>
                    <select class="form-control" id="university" ng-model="UniId">
                        <option ng-repeat="university in vm.universities" value="{{university.Id}}">
                            {{university.Name}}
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Nazwa</label>
                    <input type="text" class="form-control" id="name" ng-model="name"/>
                </div>
                <div class="form-group">
                    <label for="shortName">Skrót nazwy</label>
                    <input type="text" class="form-control" id="shortName" ng-model="shortName"/>
                </div>
                <div>
                    <button type="submit" class="btn btn-success">Zatwierdź</button>
                </div>
            </form>
        </div>
    </div>
</div>