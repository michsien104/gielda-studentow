<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3>Dodaj profil uczelni</h3>
            <form role="form" ng-submit="vm.addUniversity()">
                <div class="form-group">
                    <label for="name">Nazwa</label>
                    <input id="name" type="text" class="form-control" ng-model="name"/>
                </div>
                <div class="form-group">
                    <label for="shortName">Skrót nazwy</label>
                    <input id="shortName" type="text" class="form-control" ng-model="shortName"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Zatwierdź</button>
                </div>
            </form>
        </div>
    </div>
</div>